BasedOnStyle: LLVM
UseTab: Never
IndentWidth: 4
ColumnLimit: 120
AllowShortFunctionsOnASingleLine: None
AllowShortIfStatementsOnASingleLine: false
AllowShortLoopsOnASingleLine: false
BreakBeforeBraces: Custom
BraceWrapping:
  AfterFunction: true      # put function braces on a new line
  AfterControlStatement: false   # keep if/while/for braces on the same line
  AfterClass: true
  AfterEnum: true
  AfterStruct: true